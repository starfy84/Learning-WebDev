<div class="cc text-center container-fluid">
    <h1>Welcome to BooksForAll</h1>
    <h4>We are a membership community driven website that strives to deliver you textbooks online.</h4>
</div>
<div class="container home-signup-links">
    <div class="row">
        <% if user_signed_in? %>
            <div class="col-md-6">
                <div class="well">
                    <h2 class="text-center">Your Profile</h2>
                    <p class="text-center">Create your profile to participate in the community.</p>
                    <% if current_user.profile %>
                        <%=link_to "Edit your profile", edit_user_profile_path(current_user.id), class: 'btn btn-default btn-lg btn-block'%>
                        <%=link_to "View your profile", user_path(current_user.id), class: 'btn btn-default btn-lg btn-block'%>
                    <% else %>
                        <%= link_to "Create your profile",new_user_profile_path(user_id: current_user.id), class: 'btn btn-default btn-lg btn-block'%>
                    <%end%>
                </div>
            </div>
            <div class="col-md-6">
                <div class="well">
                    <h2 class="text-center">The Community</h2>
                    <p class="text-center">Interact with people on the site!</p>
                    <%= link_to "Visit the Community", users_path,class:'btn btn-default btn-lg btn-block'%>
                </div>
            </div>
        <%else%>
            <div class="col-md-6">
                <div class="well">
                    <h3 class="text-center">Basic</h3>
                    <h5 class="text-center">Sign up for free and have access to limited resources</h5>
                    <%= link_to "Sign up with Basic", new_user_registration_path(plan: @basic_plan.id),class: 'btn btn-primary btn-lg btn-block'%>
                </div>
            </div>
            <div class ="col-md-6">
                <div class="well">
                    <h3 class="text-center">Pro</h3>
                    <h5 class="text-center">Sign up for the pro account for $10/month to get complete access to our community's resources</h5>
                    <%= link_to "Sign up with Pro", new_user_registration_path(plan: @pro_plan.id), class: 'btn btn-success btn-lg btn-block' %>
                </div>
            </div>
        <%end%>
    </div>
    
</div>